@model HomeViewModel

<!-- Tabela de Clientes -->
<table class="table table--clients">
    <caption class="table__caption">
        Clientes
        <a class="table__link" href="/clients/create">Cadastrar</a>
    </caption>
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__header-cell">Id</th>
            <th class="table__header-cell">Nome Completo</th>
            <th class="table__header-cell">Email</th>
            <th class="table__header-cell">Editar</th>
        </tr>
    </thead>
    <tbody class="table__body">
        @foreach (var client in Model.Clients)
        {
            <tr class="table__row">
                <td class="table__cell">@client.Id</td>
                <td class="table__cell">@client.FullName</td>
                <td class="table__cell">@client.Email</td>
                <td class="table__cell">
                    <a class="table__link" href="/clients/details/@client.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Tabela de Propriedades -->
<table class="table table--properties">
    <caption class="table__caption">
        Propriedades
        <a class="table__link" href="/properties/index">Editar</a>
    </caption>
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__header-cell">Id</th>
            <th class="table__header-cell">Endereço</th>
            <th class="table__header-cell">Preço</th>
            <th class="table__header-cell">Cliente Id</th>
        </tr>
    </thead>
    <tbody class="table__body">
        @foreach (var property in Model.Properties)
        {
            <tr class="table__row">
                <td class="table__cell">@property.Id</td>
                <td class="table__cell">@property.Address</td>
                <td class="table__cell">@property.Price</td>
                <td class="table__cell">@property.ClientId</td>
            </tr>
        }
    </tbody>
</table>

<!-- Tabela de Contratos -->
<table class="table table--contracts">
    <caption class="table__caption">
        Contratos
        <a class="table__link" href="/contracts/index">Editar</a>
    </caption>
    <thead class="table__header">
        <tr class="table__row">
            <th class="table__header-cell">Id</th>
            <th class="table__header-cell">Cliente Id</th>
            <th class="table__header-cell">Propriedade Id</th>
            <th class="table__header-cell">Data do Contrato</th>
        </tr>
    </thead>
    <tbody class="table__body">
        @foreach (var contract in Model.Contracts)
        {
            <tr class="table__row">
                <td class="table__cell">@contract.Id</td>
                <td class="table__cell">@contract.ClientId</td>
                <td class="table__cell">@contract.PropertyId</td>
                <td class="table__cell">@contract.ContractDate</td>
            </tr>
        }
    </tbody>
</table>