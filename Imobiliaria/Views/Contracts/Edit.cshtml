@model Imobiliaria.Models.Contract

@{
    ViewData["Title"] = "Edit Contract";
}

<h1>Edit Contract</h1>

<form asp-action="Edit" asp-controller="Contracts" method="post">
    <div class="form-group">
        <label asp-for="ContractState" class="control-label"></label>
        <select asp-for="ContractState" class="form-control" asp-items="Html.GetEnumSelectList<Imobiliaria.Models.Enums.ContractState>()">
            <option value="">-- Select Contract State --</option>
        </select>
        <span asp-validation-for="ContractState" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
